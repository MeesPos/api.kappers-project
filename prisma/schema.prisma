generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Hairdresser {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  default_times DefaultTimes[]
  changed_times ChangedTimes[]
  appointments Appointments[]
} 

model DefaultTimes {
  id Int @id @default(autoincrement())
  hairdresser Hairdresser @relation(fields: [hairdresser_id], references: [id])
  hairdresser_id Int
  day_of_the_week String
  start_time String?
  end_time String?
  pauzes Json
}

model ChangedTimes {
  id Int @id @default(autoincrement())
  hairdresser Hairdresser @relation(fields: [hairdresser_id], references: [id])
  hairdresser_id Int
  date String
  start_time String?
  end_time String?
  pauzes Json
}

model Appointments {
  id Int @id @default(autoincrement())
  treatment Treatments @relation(fields: [treatment_id], references: [id])
  treatment_id Int
  hairdresser Hairdresser @relation(fields: [hairdresser_id], references: [id])
  hairdresser_id Int
  date String
  start_time String
  end_time String
}

model Treatments {
  id Int @id @default(autoincrement())
  appointments Appointments[]
}