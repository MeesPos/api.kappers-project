generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Hairdresser {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  availability Json
  default_times DefaultTimes[]
  changed_times ChangedTimes[]
} 

model DefaultTimes {
  id Int @id @default(autoincrement())
  hairdresser Hairdresser @relation(fields: [hairdresser_id], references: [id])
  hairdresser_id Int
  day_of_the_week String
  start_time String
  end_time String
  pauzes Json
}

model ChangedTimes {
  id Int @id @default(autoincrement())
  hairdresser Hairdresser @relation(fields: [hairdresser_id], references: [id])
  hairdresser_id Int
  date DateTime
  start_time String
  end_time String
  pauzes Json
}